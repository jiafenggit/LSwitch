<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseSwitch">
        <!--off属性-->
        <attr format="color" name="track_color_off"/>
        <attr format="color" name="thumb_color_off"/>
        <attr format="color" name="text_color_off"/>
        <attr format="dimension" name="text_size_off"/>
        <attr format="string" name="text_off"/>

        <!--on属性-->
        <attr format="color" name="track_color_on"/>
        <attr format="color" name="thumb_color_on"/>
        <attr format="color" name="text_color_on"/>
        <attr format="dimension" name="text_size_on"/>
        <attr format="string" name="text_on"/>

        <!--其它属性-->
        <attr format="boolean" name="checked"/>
        <attr format="boolean" name="text_show"/>
    </declare-styleable>
</resources>
